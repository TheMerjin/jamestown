---
import SurviveJamestown from '../components/SurviveJamestown.jsx';
import Header from '../components/header.astro';
import Leaderboard from '../components/leaderboard';
import SidebarComments from '../components/comments.jsx';

const response = await fetch('https://jamestownapush.vercel.app/api/get_leaderboard');
const data = await response.json();

if (!response.ok) {
  throw new Error('Failed to fetch leaderboard data');
}
data.leaderboard.sort((a,b) => a.Time - b.Time);
export const prerender = false;
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      main {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        max-width: 800px;
        margin: 2rem auto;
        padding: 0 1rem;
        line-height: 1.6;
        align-items: center;
        color: #222;
        background: #f9f9f9;
      }
      body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        max-width: 100%;
        margin: 2rem auto;
        padding: 0 1rem;
        line-height: 1.6;
        color: #222;
        background: #f9f9f9;
      }
      header.page-header {
        text-align: center;
        margin-bottom: 2rem;
      }
      h1 {
        font-size: 2.5rem;
        margin-bottom: 0.2rem;
        color: #4a2c0a;
      }
      h2 {
        color: #7b5e1e;
        margin-top: 2rem;
      }
      p {
        margin-bottom: 1rem;
      }
      a {
        color: #0a58ca;
        text-decoration: none;
      }
      a:hover {
        text-decoration: underline;
      }
      .highlight {
        background-color: #ffeeba;
        padding: 0.2rem 0.5rem;
        border-radius: 4px;
        font-weight: 600;
      }
      footer {
        margin-top: 3rem;
        text-align: center;
        font-size: 0.9rem;
        color: #555;
        border-top: 1px solid #ddd;
        padding-top: 1rem;
      }
      figure {
        margin: 0;
        text-align: center;
      }
      img {
        max-width: 100%;
        height: auto;
        display: block;
        margin: 0rem auto;
      }
      ul.sources {
        font-size: 0.85rem;
        color: #444;
        margin-top: 1rem;
        padding-left: 1.5rem;
      }
      ul.sources li {
        margin-bottom: 0.5rem;
      }
    </style>
    
  </head>
  <main>
      <Header/>
    </main>
  <body>
    


<!-- Main container for game and comments -->
<div style="display: flex; justify-content: center; gap: 2rem; margin: 2rem auto; flex-wrap: wrap; max-width: 1200px;">
  
  <!-- Game column -->
  <div style="flex: 1 1 400px; min-width: 300px;">
    <SurviveJamestown startDay={1} goalDays={10} client:load />
  </div>

  <!-- Comments column -->
  <div style="flex: 1 1 300px; min-width: 250px;">
    <SidebarComments client:load />
  </div>
</div>

<!-- Leaderboard below -->
<div style="max-width: 60%; margin: auto; padding: 0 1rem;">
  <h1 style="text-align: center; margin-bottom: 1rem;">Leaderboard</h1>
  <table style="width: 100%; border-collapse: collapse;">
    <thead>
      <tr>
        <th style="border: 1px solid #ccc; padding: 8px; text-align: center;">Rank</th>
        <th style="border: 1px solid #ccc; padding: 8px;">Player Name</th>
        <th style="border: 1px solid #ccc; padding: 8px; text-align: center;">Score</th>
        <th style="border: 1px solid #ccc; padding: 8px; text-align: center;">Time</th>
      </tr>
    </thead>
    <tbody>
      {data.leaderboard.map((entry, index) => (
        <tr key={entry.id} style={{ backgroundColor: index % 2 === 0 ? "#f9f9f9" : "#fff" }}>
          <td style="border: 1px solid #ccc; padding: 8px; text-align: center;">{index + 1}</td>
          <td style="border: 1px solid #ccc; padding: 8px;">{entry.player_name}</td>
          <td style="border: 1px solid #ccc; padding: 8px; text-align: center;">{entry.score}</td>
          <td style="border: 1px solid #ccc; padding: 8px; text-align: center;">{entry.Time}</td>
        </tr>
      ))}
    </tbody>
  </table>
</div>

<footer style="text-align: center; color: #777; margin: 3rem 0;">
  <p>&copy; 2025 Sreek. No single one of the rights reserved. Code available here: <a href="https://github.com/TheMerjin/jamestown" target="_blank">GitHub</a></p>
</footer>
</body>
