---
const response = await fetch('https://jamestownapush.vercel.app/api/get_leaderboard');
const data = await response.json();

if (!response.ok) {
  throw new Error('Failed to fetch leaderboard data');
}
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Leaderboard</title>
    <style>
      /* Retro Style for Old-School Text and Clean Look */
      body {
        font-family: 'Courier New', Courier, monospace;
        background-color: #f5f5f5;
        color: #333;
        margin: 0;
        padding: 0;
      }

      h1 {
        text-align: center;
        margin-top: 30px;
        font-size: 2rem;
        letter-spacing: 2px;
        color: #444;
      }

      table {
        width: 80%;
        margin: 30px auto;
        border-collapse: collapse;
      }

      table, th, td {
        border: 1px solid #ccc;
      }

      th, td {
        padding: 10px;
        text-align: left;
      }

      th {
        background-color: #f2f2f2;
        font-weight: bold;
        text-transform: uppercase;
      }

      tr:nth-child(odd) {
        background-color: #f9f9f9;
      }

      tr:hover {
        background-color: #e1e1e1;
      }

      .leaderboard-table {
        width: 100%;
      }

      .rank {
        text-align: center;
      }

      .score {
        text-align: center;
      }

      /* Simple footer for the retro feel */
      footer {
        text-align: center;
        font-size: 0.9rem;
        color: #777;
        margin-top: 30px;
      }
    </style>
  </head>
  <body>
    <h1>Leaderboard</h1>
    <table class="leaderboard-table">
      <thead>
        <tr>
          <th class="rank">Rank</th>
          <th>Player Name</th>
          <th class="score">Score</th>
          <th>Time</th>
        </tr>
      </thead>
      <tbody>
        
        {data.leaderboard.map((entry, index) => (
          <tr key={entry.id}>
            <td class="rank">{index + 1}</td>
            <td>{entry.player_name}</td>
            <td class="score">{entry.score}</td>
            <td>{entry.Time}</td>
          </tr>
        ))}
      </tbody>
    </table>

    <footer>
      <p>&copy; 2025 Your Game. All rights reserved.</p>
    </footer>
  </body>
</html>
